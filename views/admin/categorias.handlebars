<h2>Lista de Categoria</h2>
<hr>
<a href="/admin/categorias/add">
<button type="button" name="button" class="btn btn-success">Adicionar Categoria</button>
</a>

{{#each categorias}}
<div class="card-body mt-4">
  <h4>{{nome}}</h4>
  <small>Slug:{{slug}}</small>
  <small>Data de criação: {{date}}</small><br>
<a href="/admin/categorias/edit/{{_id}}" class="btn btn-success mt-4">Editar categoria</a>

<form class="" action="/admin/categorias/deletar" method="POST">
  <input type="hidden" name="id" value="{{_id}}">
  <button  type="submit" name="button" class="btn btn-danger mt-2" >Deletar Categoria</button>
</form>
</div>
{{else}}
<h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}
