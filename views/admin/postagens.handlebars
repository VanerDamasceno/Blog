<h2>Lista de Categoria</h2>
<hr>
<a href="/admin/postagens/add">
<button type="button" name="button" class="btn btn-success">Adicionar Categoria</button>
</a>
{{#each postagens}}
<div class="card">
  <div class="card-body mt-4">
    <h4>{{titulo}}</h4>
    <p>Descrição:{{descricao}}</p>
    <small>Data:{{data}}</small>
    <small>Categoria:{{categoria.nome}}</small><br>
    <a href="/admin/postagens/edit/{{_id}}"><button type="button" name="button" class="btn btn-success">Editar Postagem</button> </a>
  </div>

</div>
{{else}}
<p>Nenhuma postagem registrada</p>
{{/each}}
